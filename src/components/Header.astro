---
import "../styles/global.css";
import Login from "./Login.astro";
---

<header class="header">
  <div class="logo">
    <h1>AskExperts</h1>
  </div>
  <nav class="nav">
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/casestudy">Case Study</a></li>
      <li><a href="/team">Team</a></li>
      <li><a href="/about">About</a></li>
    </ul>
  </nav>
  <div class="login">
    <Login />
  </div>
</header>

<style>
  header {
    background-color: #1e1c1ce2; /* MÃ¸rk baggrundsfarve */
    padding: 1rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo h1 {
    color: #fff;
    font-size: 1.5rem;
  }

  .nav ul {
    display: flex;
    list-style: none;
    gap: 1.5rem;
  }

  .nav a {
    color: #fff;
    text-decoration: none;
    font-size: 1rem;
  }

  .nav a:hover {
    text-decoration: underline;
  }

  .login-btn {
    background-color: #f1c04d; /* Gule login-knap */
    color: #000;
    border: none;
    border-radius: 25px;
    padding: 0.5rem 1rem;
    cursor: pointer;
    font-size: 1rem;
  }

  .login-btn:hover {
    background-color: #e0a73c;
  }

  @media (max-width: 768px) {
    .nav ul {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>
