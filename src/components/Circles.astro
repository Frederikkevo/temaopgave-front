---
import "../styles/global.css";
---

<div class="parent" style="--percent: 85%">
  <div class="child"></div>
  <h2 class="text">85%</h2>
</div>

<style>
  .parent {
    --offset-pos: 5px;
    /*animation: --pie 3s linear infinite;*/
    border: var(--offset-pos) solid transparent;
    background:
      linear-gradient(#fff, #fff) padding-box,
      conic-gradient(white var(--percent), grey 0) border-box;
    position: relative;

    .child {
      aspect-ratio: 1;
      border-radius: 99px;
      width: 20px;
      background: white;
      position: absolute;
      offset-path: border-box;
      offset-distance: var(--percent);
      offset-anchor: 50% calc(50% - var(--offset-pos) / 2);
    }
  }

  /*@keyframes --pie {
  to {
    --percent: 100%;
  }
}*/

  .text {
    position: absolute;
    justify-content: center;
    align-items: center;
    font-size: 1.5em;
    font-weight: bold;
    color: #000;
  }

  .parent {
    aspect-ratio: 1;
    width: 150px;
    border-radius: 1e5px;
    margin-inline: auto;
  }
</style>
